<section class="user-panel">
	<h2>Sign up</h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div><%= f.email_field :email, :autofocus => true, :id => :email, :placeholder => "Email" %></div>

	  <div><%= f.password_field :password, :id => :password, :placeholder => "Password" %></div>

	  <div><%= f.password_field :password_confirmation, :id => :password_confirmation,
	  :placeholder => "Password again" %></div>

	  <div><%= f.submit "Sign up", :class => "btn btn-primary btn-large" %></div>
	<% end %>

	<p>Already a user? <%= link_to "Sign in", new_session_path(resource_name) %></p>
</section>