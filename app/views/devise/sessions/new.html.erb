<section class="user-panel span4 offset4">
	<h2>Sign in</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div><%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>

		<div><%= f.password_field :password, :placeholder => "Password" %></div>

		<div><%= f.submit "Sign in", :class => "btn btn-primary btn-large" %></div>
		<div class="user-options">
			<% if devise_mapping.rememberable? -%>
			<div class="fleft"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			<% end -%>
			
			<div class="fright">
				<%= link_to "Forgot your password?", new_password_path(resource_name) %>
			</div>
		</div>
		<p>Need an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
	<% end %>
</section>